{
  "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
  "applicationId": "com.entropia.flow",
  "version": "0.0.1",
  "applicationName": "Entropia Flow Client",
  "author": "Lucho MUCHO Ireton",
  "description": "Entropia Flow Client",
  "defaultMode": "window",
  "port": 0,
  "documentRoot": "/resources/",
  "url": "/",
  "enableServer": true,
  "enableNativeAPI": true,
  "tokenSecurity": "one-time",
  "logging": {
    "enabled": true,
    "writeToLogFile": true
  },
  "nativeAllowList": [
    "app.*",
    "os.*",
    "filesystem.*",
    "window.*",
    "debug.log",
    "events.*",
    "storage.*"
  ],
  "modes": {
    "window": {
      "title": "Entropia Flow Client Logic (Hidden)",
      "icon": "/resources/img/appIcon.png",
      "hidden": true,
      "enableInspector": true,
      "exitProcessOnClose": true
    }
  },
  "cli": {
    "binaryName": "EntropiaFlowClient",
    "resourcesPath": "/resources/",
    "extensionsPath": "/extensions/",
    "clientLibrary": "/resources/js/neutralino.js",
    "binaryVersion": "6.1.0",
    "clientVersion": "6.1.0"
  }
}