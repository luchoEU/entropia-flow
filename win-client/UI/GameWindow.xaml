<Window x:Class="EntropiaFlowClient.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntropiaFlowClient"
        xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" Height="70" Width="250"
        Title="Entropia Flow Client"
        Icon="/UI/flow128w.ico">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                  ResizeBorderThickness="12"
                  CornerRadius="20"/>
    </WindowChrome.WindowChrome>
    <Grid x:Name="mainGrid" Background="LightBlue">
        <TextBlock x:Name="loadingTextBlock" Text="Loading..." VerticalAlignment="Center" HorizontalAlignment="Center" />
        <wpf:WebView2 x:Name="webView2" DefaultBackgroundColor="Transparent" />
    </Grid>
</Window>
