{
    "manifest_version": 3,

    "name": "Entropia Flow",
    "description": "This extension help you see your returns in Entropia Universe",
    "version": "0.0.5",
    "icons": {
        "128": "img/flow128.png"
    },

    "content_scripts": [{
        "js": [
            "content.js"
        ],
        "matches": [
            "https://account.entropiauniverse.com/account/my-account/*"
        ]
    }],
    "background": {
        "service_worker": "background.js"
    },
    "action": {},
    "permissions": [
        "alarms",
        "storage"
    ]
}