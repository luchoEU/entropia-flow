{
    "manifest_version": 3,

    "name": "Entropia Flow",
    "description": "This extension help you see your returns in Entropia Universe",
    "version": "0.4.6",
    "icons": {
        "128": "img/flow128.png"
    },

    "content_scripts": [{
        "js": [
            "content.js"
        ],
        "matches": [
            "https://account.entropiauniverse.com/account/my-account/*"
        ]
    }],
    "background": {
        "service_worker": "background.js"
    },
    "action": {},
    "permissions": [
        "alarms",
        "storage",
        "notifications",
        "tabs"
    ],
    "host_permissions": [
        "https://api.entropianexus.com/*",
        "http://www.entropiawiki.com/*"
    ],
    "content_security_policy": {
        "_comment": "Reload chrome extension for this change to take effect",
        "extension_pages": "script-src 'self' http://localhost:8097; object-src 'self';"
    }
}